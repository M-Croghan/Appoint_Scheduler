<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="335.0" prefWidth="720.0" style="-fx-border-color: #69c79b; -fx-border-width: 5px;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View_Controller.CustomerController">
   <children>
      <TableView fx:id="custTable" layoutX="37.0" layoutY="107.0" prefHeight="200.0" prefWidth="646.0">
        <columns>
          <TableColumn fx:id="custIdCol" prefWidth="91.0" text="Customer ID" />
          <TableColumn fx:id="custNameCol" prefWidth="97.0" text="Name" />
            <TableColumn fx:id="custAddressCol" prefWidth="128.0" text="Address" />
            <TableColumn fx:id="custPostalCol" prefWidth="122.0" text="Postal Code" />
            <TableColumn fx:id="custPhoneCol" prefWidth="87.0" text="Phone" />
            <TableColumn fx:id="custDivCol" prefWidth="120.0" text="State / Province" />
        </columns>
      </TableView>
      <Button fx:id="addNewCustBtn" layoutX="37.0" layoutY="60.0" mnemonicParsing="false" onAction="#toNewCustomer" text="Add New Customer" />
      <Button fx:id="toEditCustBtn" layoutX="205.0" layoutY="60.0" mnemonicParsing="false" onAction="#toEditCustomer" text="Edit Customer" />
      <Button fx:id="returnMainBtn" layoutX="606.0" layoutY="60.0" mnemonicParsing="false" onAction="#returnToMain" text="Main Menu" />
      <Button fx:id="deleteCustBtn" layoutX="325.0" layoutY="60.0" mnemonicParsing="false" onAction="#deleteCustomer" text="Delete Customer" />
      <Label layoutX="37.0" layoutY="23.0" text="All Customers" textFill="#69c79b">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
